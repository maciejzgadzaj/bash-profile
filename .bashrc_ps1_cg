    case $(hostname) in
        # Red for prod servers
        prod-1)
            PS1='${debian_chroot:+($debian_chroot)}\[\033[00;31m\]\u@\h:\[\033[00m\]\[\033[01;31m\]\w\[\033[00;31m\]\$\[\033[00m\] ' ;;
        # Green for dev & doc servers
        debian | makbuk.local | makbuk.dhcp.idf.intranet)
            # PS1='${debian_chroot:+($debian_chroot)}\[\033[00;32m\]\u@\[\033[00;33m\]\h\[\033[00;32m\]:\[\033[00m\]\[\033[01;32m\]\w\[\033[00;32m\]$(__git_ps1 "(\[\033[00;33m\]%s\[\033[00;32m\])")\$\[\033[00m\] ' ;;
            PS1='${debian_chroot:+($debian_chroot)}\[\033[00;90m\]\u@\h\[\033[00;32m\] \[\033[00m\]\[\033[01;32m\]\w \[\033[00;33m\]$(__git_ps1 "[%s]")\[\033[00;90m\]\$\[\033[00m\] ' ;;
        # Blue for anything else
        *)
            PS1='${debian_chroot:+($debian_chroot)}\[\033[00;34m\]\u@\h:\[\033[00m\]\[\033[01;34m\]\w\[\033[00;34m\]\$\[\033[00m\] ' ;;
    esac
